	urldate = {2025-03-10},
	journal = {ACM Transactions on Computing for Healthcare},
	author = {Naeini, Emad Kasaeyan and Sarhaddi, Fatemeh and Azimi, Iman and Liljeberg, Pasi and Dutt, Nikil and Rahmani, Amir M.},
	month = oct,
